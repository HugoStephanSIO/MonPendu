<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hugo.monpendu.vue.DifficulteActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.65">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/etape10"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LE JEU DU PENDU"
                android:id="@+id/lblTitreJeu"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#6973ff"
                android:layout_weight="0.16" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:layout_gravity="center">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="JEU SIMPLE"
                android:id="@+id/boutonJeuSimple"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="18dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="JEU PARCOURS"
                android:id="@+id/boutonJeuParcours"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="OPTIONS"
                android:id="@+id/boutonOptions"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:clickable="false"
                android:enabled="false" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="AIDE"
                android:id="@+id/boutonAide"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Quitter"
                android:id="@+id/boutonQuitter"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
